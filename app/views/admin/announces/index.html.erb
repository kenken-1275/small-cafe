<div class="announces">
  <div class="announces-center">
    <div class="announces-title">お知らせ一覧</div>
    <div class="announce-new">
      <div class="announce-new-button"><%= link_to '新規投稿する', new_admin_announce_path %></div>
    </div>
    <div class="admin-announces-index">
      <% @announces.each do |announce| %>
        <div class="announce">
          <%= announce.date %>
          <%= link_to announce.title,edit_admin_announce_path(announce.id) %><br>
          <%= announce.content %>
        </div>
      <% end %>
    </div>
  </div>
</div>